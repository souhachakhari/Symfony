{% extends 'base.html.twig' %}
{% block body %}
    <style>
    /* RESET */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #eef2f3;
        padding: 20px;
        color: #333;
    }

    header {
        text-align: center;
        margin-bottom: 40px;
    }

    header h1 {
        font-size: 2.5rem;
        color: #2c3e50;
    }

    main {
        display: grid;
        grid-template-columns: 1fr;
        gap: 40px;
        max-width: 800px;
        margin: 0 auto;
    }

    /* FORMULAIRE */
    .note-form {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .note-form form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .note-form textarea {
        padding: 12px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        min-height: 100px;
        resize: vertical;
    }

    /* Cibler les boutons du formulaire */
    .note-form button {
        background-color: #3498db;
        color: white;
        font-weight: bold;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s;
        width: 200px;
        align-self: flex-start;
    }

    .note-form button:hover {
        background-color: #2980b9;
    }

    /* LISTE DES NOTES */
    .notes-section {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .notes-section h2 {
        margin-bottom: 20px;
        font-size: 2rem;
        color: #34495e;
        text-align: center;
    }

    .note-list {
        list-style: none;
        padding: 0;
    }

    .note-item {
        background: #f9f9f9;
        padding: 15px;
        margin-bottom: 15px;
        border-left: 5px solid #3498db;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .note-content {
        flex: 1;
        margin-right: 20px;
        font-size: 1rem;
    }

    .note-actions {
        display: flex;
        gap: 10px;
    }

    .edit-link {
        background-color: #f1c40f;
        color: #2c3e50;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .edit-link:hover {
        background-color: #d4ac0d;
    }

    .note-actions button {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .note-actions button:hover {
        background-color: #c0392b;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .note-item {
            flex-direction: column;
            align-items: flex-start;
        }
        .note-actions {
            margin-top: 10px;
        }
    }
</style>


    <header>
        <h1>üìù Ajouter une Note</h1>
    </header>

    <main>
        <!-- Formulaire -->
        <section class="note-form">
            {{ form_start(form) }}
                {{ form_widget(form.content, {'attr': {'placeholder': '√âcrire votre note ici...'}}) }}
            {{ form_end(form) }}
        </section>

        <!-- Liste des notes -->
        <section class="notes-section">
            <h2>Mes Notes</h2>

            <ul class="note-list">
                {% for note in notes %}
                    <li class="note-item">
                        <div class="note-content">
                            <strong>{{ note.createdAt|date('d/m/Y H:i') }}</strong><br>
                            {{ note.content }}
                        </div>
                        <div class="note-actions">
                            <a class="edit-link" href="{{ path('note_edit', { id: note.id }) }}">Modifier</a>
                            <form action="{{ path('note_delete', { id: note.id }) }}" method="post" onsubmit="return confirm('Supprimer cette note ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                <button type="submit">Supprimer</button>
                            </form>
                        </div>
                    </li>
                {% else %}
                    <li>Aucune note trouv√©e.</li>
                {% endfor %}
            </ul>
        </section>
    </main>
{% endblock %}
